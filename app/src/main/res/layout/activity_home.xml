<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".user.view.HomeActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/vpHome"
            android:layout_width="match_parent"
            android:layout_above="@+id/bottomMain"
            android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bottomMain"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            app:menu="@menu/menu_bottom_main"
            app:itemIconTint="@color/select_main_item_color"
            app:itemTextColor="@color/select_main_item_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx>
</RelativeLayout>